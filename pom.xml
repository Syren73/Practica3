<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>Practica4</groupId>
  <artifactId>Practica4_artifact</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
  <!-- Especifica la codificación del proyecto -->
  <properties> 
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <!-- Dependencia de JUnit para pruebas -->
  <dependencies>
    <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.13</version>
        <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
    <!-- Configuración para compilar el código fuente -->
    <sourceDirectory>src/main/java</sourceDirectory> <!-- Correcto para el código fuente -->
    
    <!-- Directorio para las pruebas -->
    <testSourceDirectory>src/test/java</testSourceDirectory> <!-- Correcto para las pruebas -->
    
    <plugins>
      <!-- Configuración del plugin para compilar el código -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <release>17</release>
          <encoding>UTF-8</encoding> <!-- Establece la codificación para el compilador -->
        </configuration>
      </plugin>

      <!-- Configuración del plugin para ejecutar las pruebas -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
        <configuration>
          <!-- No es necesario especificar includes, Surefire detecta automáticamente las clases que terminan en Test -->
          <includes>
            <include>**/*Test.java</include> <!-- Asegura que todas las clases que terminan en Test.java sean ejecutadas -->
          </includes>
        </configuration>
      </plugin>

    </plugins>
  </build>
  
</project>

